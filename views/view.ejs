<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= appInfo.name %></title>
    <link href="https://cdn.bootcss.com/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/style.css">
</head>
<body class="body-view">


<div class="container py-5">
    <% if(appInfo.name) { %>

        <div class="info d-flex flex-column align-items-center">
            <div class="icon">
                <img alt="icon" src="<%= appInfo.icon %>" />
            </div>
            <h3 class="mt-3"><%= appInfo.name %></h3>

            <div class="list">
                <% versionList.forEach(function(version) { %>
                    <div class="d-flex justify-content-between align-items-center item">
                        <div><%= version.version %></div>
                        <div class="mt-2"><a class="btn btn-primary" href="<%= version.link %>">下载</a></div>
                    </div>
                <% }) %>
            </div>

        </div>

    <% } else { %>
        <div>404</div>
    <% }%>
</div>


<script>
    function showPwd() {
      var pwd = prompt('请输入密码');
      if(pwd!=9999) {
        showPwd();
      } else {
        localStorage.setItem('tmp_pwd',9999);
      };
    }
    if(localStorage.getItem('tmp_pwd')!='9999') {
      showPwd();
    }

</script>

</body>
</html>
